//
// 全体
//
*,
*::before,
*::after
  box-sizing: border-box

:root
  font: $body-font
  line-height: $body-line-height
  color: #000000

//
// TODO: タイトル
//
.title
  text-align: center
  font-family: Kakugo

//
// 見出し
//

h1, h2, h3
  margin-block-start: unset
  margin-block-end: unset
  padding: 0
  break-after: avoid
  font-family: Kakugo
  font-weight: 700

  &::before
    margin-right: 1rem

h1
  page-break-before: always
  margin: 30mm auto 15mm
  padding-top: 30mm
  font-size: 24pt

  &::before
    display: block
    font-size: 20pt

h2
  margin: 12pt auto 6px
  font-size: 15pt

  &::before
    font-size: 15pt

h3
  margin: 10pt auto 6px
  font-size: 12pt

  &::before
    font-size: 12pt

//
// 段落
//
p
  margin: 0
  text-align: justify
  text-indent: 1em

.right
  text-align: right

.left
  text-align: left

.center
  text-align: center

//
// 強調
//
strong
  font-weight: 700

//
// リンク
//
a, a:hover, a:focus, a:visited
  color: #000000

a.ref, nav.toc a
  color: inherit
  text-decoration: none

//
// インラインソースコード
//
code, kbd, pre, samp
  font-family: $code-font-family

//
// 脚注
//
span.footnote
  float: footnote
  text-align: left
  font-weight: 300
  font-size: 10px
  text-indent: 0

  &::footnote-call
    vertical-align: 0.3em

//
// 図
//
figure
  margin: 0
  text-align: center

  figcaption
    font-weight: 300

    &:before
      margin-right: 1rem

img
  max-width: 100%

//
// 表
//
table
  display: inline-block
  border-collapse: collapse

  caption
    &::before
      margin-right: 1rem

  th:first-child
    text-align: right

  tr.header
    border-bottom: 1px solid
    th
      text-align: center

  tr
    &:first-of-type
      border-top: 1px solid
    &:last-of-type
      border-bottom: 1px solid

  th, td
    padding-right: 4px
    &:first-child
      padding-left: 4px

table.nostyle
  tr
    border-top: 0
    border-bottom: 0

//
// 箇条書き
//
ol, ul
  padding-left: 3rem

ol.nostyle,
ul.nostyle
  list-style: none

//
// 参考文献
//
ol.reference
  padding-left: 0

  li
    display: flex
    list-style-type: none
    list-style-position: inside
    counter-increment: reference

    &:before
      display: marker
      content: "[" counter(reference) "] "

//
// 目次
//
nav.toc
  > ol // chapterレベル
    padding-left: 0
    list-style: none
    font-family: Kakugo
    font-weight: 700

    a::before
      margin-right: 2rem

    > li
      margin-top: 10px

    > li ol // sectionレベル
      padding-left: 1.8rem
      list-style: none
      font-family: Mincho
      font-weight: 500

  a::after // ページ番号
    float: right

//
// カウントキャンセル
//
.nocounter
  &::before
    content: ""
    margin-right: 0
